@{
    ViewBag.Title = "Quên Mật Khẩu";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/CSS/Forgot-password.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="forgot-container d-flex justify-content-center align-items-center vh-100">
        <div class="forgot-box shadow rounded bg-white p-4">
            <div class="text-center mb-3">
                <img src="~/ANH/Logodaxoanen.png" alt="Logo" class="logo-img">
                <h3 class="text-primary mt-2">Quên Mật Khẩu</h3>
            </div>

            @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post))
            {
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="example@gmail.com" required />
                </div>
                <div class="d-grid mb-2">
                    <button type="submit" class="btn btn-primary">Gửi Yêu Cầu</button>
                </div>
                <div class="text-center">
                    <a href="@Url.Action("Login", "Login")" class="text-decoration-none">← Quay lại đăng nhập</a>
                </div>
            }

            @if (!string.IsNullOrEmpty(ViewBag.Message as string))
            {
                <div class="alert alert-info text-center mt-3">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>

    <script src="~/JAVASCRIPT/Forgot-password.js"></script> <!-- nếu có js -->
</body>
</html>
