@model QuanLyNgayLaoDong.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Preload + apply Bootstrap CSS -->
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    </noscript>

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #f0f0f0; /* fallback color while background image loads */
        }

        .login-box {
            background: rgba(255, 255, 255, 0.95);
            padding: 2.5rem;
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

            .login-box h2 {
                margin-bottom: 1.5rem;
                color: #333;
            }

        .logo {
            display: block;
            margin: 0 auto 1rem;
            width: 120px;
            height: auto;
        }

        .form-group {
            margin-bottom: 1.5rem;
            text-align: left;
        }

        .form-control {
            border-radius: 8px;
            padding: 0.75rem;
            border: 1px solid #ced4da;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0,123,255,0.3);
            }

        .password-container {
            position: relative;
        }

        .show-password-btn {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: black;
            cursor: pointer;
            font-size: 1.1rem;
            padding: 0.25rem;
        }

        .btn-primary {
            width: 100%;
            padding: 0.75rem;
            border-radius: 8px;
            background: #007bff;
            border: none;
            transition: background 0.3s ease;
        }

            .btn-primary:hover {
                background: #0056b3;
            }

        .forgot-password {
            display: block;
            text-align: center;
            margin-top: 1rem;
            color: #007bff;
            text-decoration: none;
            font-size: 0.875rem;
        }

            .forgot-password:hover {
                text-decoration: underline;
            }

        .validation-message {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
    </style>
</head>
<body>
    <div class="login-container" id="loginContainer">
        <div class="login-box">
            <img src="~/IMGS/logo.jpg" alt="Đại học Đồng Tháp Logo" class="logo" loading="lazy">
            <h2>Đăng Nhập</h2>
            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Username, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "validation-message" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    <div class="password-container">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control pe-5", @id = "passwordField" })
                        <button type="button" class="show-password-btn" onclick="togglePassword()" id="togglePassword" aria-label="Hiện/ẩn mật khẩu">
                            <i class="bi bi-eye-slash" id="eyeIcon"></i>
                        </button>
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validation-message" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Đăng Nhập</button>
                    <a href="#" class="forgot-password">Quên Mật Khẩu?</a>
                </div>
            }
        </div>
    </div>

    <!-- Deferred Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>

    <!-- Toggle password visibility -->
    <script>
        function togglePassword() {
            const passwordField = document.getElementById("passwordField");
            const eyeIcon = document.getElementById("eyeIcon");
            if (passwordField.type === "password") {
                passwordField.type = "text";
                eyeIcon.classList.remove("bi-eye-slash");
                eyeIcon.classList.add("bi-eye");
            } else {
                passwordField.type = "password";
                eyeIcon.classList.remove("bi-eye");
                eyeIcon.classList.add("bi-eye-slash");
            }
        }

        // Lazy load background image after page load
        window.addEventListener('load', function () {
            document.getElementById('loginContainer').style.backgroundImage = "url('/IMGS/Nen.jpg')";
            document.getElementById('loginContainer').style.backgroundSize = "cover";
            document.getElementById('loginContainer').style.backgroundPosition = "center center";
            document.getElementById('loginContainer').style.backgroundRepeat = "no-repeat";
            document.getElementById('loginContainer').style.backgroundAttachment = "fixed";
        });
    </script>
</body>
</html>
